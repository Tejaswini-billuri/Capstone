/*4. Total Order Amount on daily basis, also to be able to split by product and geography*/
select 
EXTRACT(DATE from f.order_received_timestamp) AS Daily,
o.productid,
a.city,
sum(order_amount) total_sales
from `pax-11-366616.star_schema.fact_daily_orders` f
join `pax-11-366616.star_schema.f_order_details` o on f.orderid = o.orderid 
join `pax-11-366616.star_schema.dim_customer` c on f.customerid = c.customerid
join `pax-11-366616.star_schema.dim_address` a on c.address_id = a.address_id
group by 
Daily,
productid,
city
order by Daily
